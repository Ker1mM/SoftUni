@using Eventures.Web.ViewModels

@model  EventCreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <form class="mx-auto w-50 text-center" method="post">
        <h1>Create Event</h1>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between py-2">
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Name..." />
            </div>
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="Place"></label>
                <input class="form-control" asp-for="Place" placeholder="Place..." />
            </div>
        </div>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between py-2">
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="Start"></label>
                <input class="form-control" asp-for="Start" />
            </div>
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="End"></label>
                <input class="form-control" asp-for="End" />
            </div>
        </div>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between py-2">
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="TotalTickets"></label>
                <input class="form-control" asp-for="TotalTickets" placeholder="Total tickets..." />
            </div>
            <div class="form-group w-45">
                <label class="font-weight-bold" asp-for="PricePerTicket"></label>
                <input class="form-control" asp-for="PricePerTicket" placeholder="Price per ticket" />
            </div>
        </div>
        <hr class="hr-2 bg-eventures" />
        <button type="submit" class="btn bg-eventures">Create Event</button>
    </form>