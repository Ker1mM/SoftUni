@{
    ViewData["Title"] = "Home Page";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron bg-eventures w-75 mx-auto text-left">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark" />
        <h3><a class="" asp-area="Identity" asp-page="/Account/Login">Login</a> to start "eventing".</h3>
        <h3><a class="" asp-area="Identity" asp-page="/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else
{
    @if (this.User.IsInRole("Admin"))
    {
        <div class="jumbotron bg-eventures w-75 mx-auto">
            <h1>Greetings, Administrator - @this.User.Identity.Name!</h1>
            <hr class="hr-2 bg-secondary" />
            <h3 class="text-secondary">Enjoy your work.</h3>
        </div>
    }
    else
    {
        <div class="jumbotron bg-eventures w-75 mx-auto">
            <h1>Welcome, @this.User.Identity.Name!</h1>
            <hr class="hr-2 bg-secondary" />
            <h3 class="text-secondary">Eventures wishes you an exciting experience.</h3>
        </div>
    }
}