@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h1 class="text-center mt-3">Register</h1>

<form class="w-50 mx-auto text-center" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <hr class="mt-3 hr-eventures" />
    <div class="d-flex justify-content-between text-center">
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.Username"></label>
            <input asp-for="Input.Username" class="form-control" placeholder="Username..." />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Email..."/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between text-center">
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Password..."/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm password..."/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 hr-eventures" />
    <div class="d-flex justify-content-between text-center">
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" placeholder="FirstName..."/>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <label class="font-weight-bold" asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" placeholder="LastName..."/>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group w-100 text-center">
        <label class="font-weight-bold" asp-for="Input.UCN"></label>
        <input asp-for="Input.UCN" class="form-control" placeholder="Unique Citizen Number..." />
        <span asp-validation-for="Input.UCN" class="text-danger text-sm-center"></span>
    </div>
    <button type="submit" class="btn bg-eventures">Register</button>
</form>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
