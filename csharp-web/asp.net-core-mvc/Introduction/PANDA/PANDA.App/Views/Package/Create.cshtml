@using PANDA.App.ViewModels

@model  CreatePackageInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3">
    <h1 class="text-center">Create Package</h1>
    <hr class="hr-2 bg-panda w-50">
    <div class="d-flex">
        <form class="w-50 mx-auto">
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" placeholder="Description..." class="form-control">
            </div>
            <div class="weight-and-address-holder d-flex justify-content-between">
                <div class="form-group w-50 pr-5">
                    <label asp-for="Weight">Weight</label>
                    <input asp-for="Weight" type="number" class="form-control" placeholder="Weight...">
                </div>
                <div class="form-group w-50 pl-5">
                    <label asp-for="Address">Shipping Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Shipping Address...">
                </div>
            </div>
            <hr class="hr-2 bg-panda">
            <div class="form-group w-50 mx-auto">
                <div class="text-center">
                    <label for="recipient">Recipient</label>
                </div>
                <select asp-for="Recipient" class="custom-select" >
                    <option selected disabled>-- Choose Recipient --</option>
                    @foreach (var user in @Model.Recipients.Users)
                    {
                        <option value="@user">@user</option>
                    }
                </select>
            </div>
            <hr class="hr-2 bg-panda">
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn bg-panda text-white">Create</button>
            </div>
        </form>
    </div>
</main>
