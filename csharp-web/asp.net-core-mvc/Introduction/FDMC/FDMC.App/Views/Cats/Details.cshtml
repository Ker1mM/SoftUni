    <h1>@Model.Name</h1>
    <img src="@Model.ImageURL" alt="@Model.Name" style="width:300px;height:300px;"/>
    <div><b>Age: @Model.Age</b></div>
    <div><b>Breed: @Model.Breed</b></div>
</div>