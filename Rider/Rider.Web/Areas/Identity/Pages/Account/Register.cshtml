@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="" id="accountPage">
    <div class="container pb-5"></div>
    <div class="container-fluid login-page my-auto" id="registerBox">
        <div class="py-2 text-center border-bottom">
            <a asp-area="Identity" asp-page="Login" class="btn btn-primary btn-lg">Log In</a>
            <a asp-area="Identity" asp-page="Register" class="btn btn-primary btn-lg disabled">Register</a>
        </div>
        <section class="pt-3 text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center justify-content-between py-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
